<?xml version="1.0" encoding="UTF-8"?>
    
<odoo>
    <record id="twillio_config_view_form" model="ir.ui.view">
        <field name="name">twillio.config.form</field>
        <field name="model">twillio.config</field>
        <field name="arch" type="xml">
            <form string="Twilio configurations">
                <sheet>
                    <group col="4">
                        <field name="name"/>
                        <field name="account_sid"/>
                        <field name="auth_token"/>
                        <field name="number_from"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="twillio_config_view_tree" model="ir.ui.view">
        <field name="name">twillio.config.tree</field>
        <field name="model">twillio.config</field>
        <field name="arch" type="xml">
            <tree string="Twilio configurations">
                <field  name="name"/>
                        <field name="account_sid"/>
                        <field name="auth_token"/>
            </tree>
        </field>
    </record>


    <record id="twillio_config_action" model="ir.actions.act_window">
        <field name="name">Twilio configurations</field>
        <field name="res_model">twillio.config</field>
         <field name="binding_view_types">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="twillio_config_view_tree"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
            Click to create a Twilio configurations :-)
          </p>
        </field>
    </record>
    
  
    
    <menuitem id="root_twillio_config" name="Twilio Configurations" />
    
    <menuitem action="twillio_config_action" id="twillio_config_menu" name="Settings"/>
   
</odoo>
